@model IEnumerable<LanceUmDesafio.Models.Comentario>

@{
    Layout = null;
}

@foreach (var item in Model)
{
    <!-- Comment -->
    <div class="media">
        <a class="pull-left" href="#">
            <img class="media-object img-circle" src="@Url.Content(item.AspNetUsers.Foto)" alt="Foto Perfil" style="width:32px;height:32px;">
        </a>
        <div class="media-body">
            <h4 class="media-heading">
                <small>@item.AspNetUsers.Nome</small>
                <small>@item.DataComentario.Value.ToShortDateString()</small>
            </h4>
            @item.Conteudo
        </div>
    </div>
    <!--End Comment-->
}


