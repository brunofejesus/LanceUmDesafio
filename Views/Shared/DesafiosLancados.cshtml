@model IEnumerable<LanceUmDesafio.Models.Desafio>
    @{ 
        int i = 0;
    }


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>#</th>
                <th>Titulo</th>
                <th>Data Da Postagem</th>
                <th>Rank</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td>@i</td>
                    <td><a href="@Url.Action("Details","Desafio", new { id = item.IdDesafio })">@item.Titulo</a></td>
                    <td>@item.DataPostagem.Value.ToShortDateString()</td>
                    <td>@item.Rank</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-dismissible alert-info">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Você ainda não cadastrou desafios</strong> Cadastre <a href="@Url.Action("Create","Desafio")" class="alert-link">clicando aqui!</a>
    </div>
}

